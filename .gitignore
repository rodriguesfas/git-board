# ===========================================
# PHP / API
# ===========================================
# Arquivos de dados JSON (contêm dados sensíveis)
api/data/*.json
!api/data/.gitkeep

# Logs do PHP
*.log
api/logs/
api/*.log

# Cache do PHP
api/cache/
api/tmp/

# Arquivos de configuração local
api/config/local.php
api/.env
api/.env.local

